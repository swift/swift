Import("env")

if env.get("ZLIB_BUNDLED", False) :
    if env["SCONS_STAGE"] == "flags" :
        env["ZLIB_FLAGS"] = {
                "CPPPATH": [Dir("src")],
                "LIBPATH": [Dir(".")],
            }

    if env["SCONS_STAGE"] == "build" :
        env["ZLIB_OBJECTS"] = env.SwiftenObject([
                "src/adler32.c",
                "src/compress.c",
                "src/crc32.c",
                "src/deflate.c",
                "src/gzio.c",
                "src/infback.c",
                "src/inffast.c",
                "src/inflate.c",
                "src/inftrees.c",
                "src/trees.c",
                "src/uncompr.c",
                "src/zutil.c"
            ])
